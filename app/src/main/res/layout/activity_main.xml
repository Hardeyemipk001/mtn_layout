<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context=".MainActivity">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

   <androidx.cardview.widget.CardView
       android:layout_width="match_parent"
       android:layout_height="120dp"
       android:elevation="15dp">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="horizontal">

         <LinearLayout
             android:layout_width="250dp"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:paddingLeft="16dp">

            <Button
                android:id="@+id/back_arrow"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/bounded_round"
                android:drawableLeft="@drawable/back_arrow"
                android:drawablePadding="15dp"
                android:paddingLeft="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:text="MTN NIGERIA PLC  "
                android:textColor="#000000"
                android:textSize="19sp" />

         </LinearLayout>

         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginLeft="20dp"
             android:layout_marginTop="5dp"
             android:drawableLeft="@drawable/trending_up"
             android:drawablePadding="10dp"
             android:paddingLeft="10dp"
             android:text="(45.00%)"
             android:textColor="#28B82E"
             android:textSize="20sp" />
      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="horizontal">

         <Button
             android:layout_width="wrap_content"
             android:layout_height="40dp"
             android:layout_marginLeft="100dp"
             android:layout_marginTop="50dp"
             android:background="@drawable/bound_naira"
             android:text="Naira"
             android:textAllCaps="false"
             android:textColor="#EBFFFFFF"
             android:textSize="21sp" />

         <View
             android:layout_width="0.6dp"
             android:layout_height="23dp"
             android:layout_marginLeft="35dp"
             android:layout_marginTop="60dp"
             android:background="#4BB1A5A5" />

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="33dp"
             android:layout_marginTop="50dp"
             android:text="USD  "
             android:textColor="#7142C3"
             android:textSize="19sp"
             android:textStyle="bold" />
      </LinearLayout>
   </androidx.cardview.widget.CardView>
</LinearLayout>


<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginTop="45dp"
    android:orientation="vertical">

   <androidx.cardview.widget.CardView
       android:layout_width="370dp"
       android:layout_height="62dp"
       android:layout_gravity="center"
       app:cardCornerRadius="16dp"
       app:cardElevation="0dp">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="62dp"
          android:orientation="vertical">

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_gravity="center"
             android:layout_marginTop="7dp"
             android:text="Enter Amount  "
             android:textColor="#5C000000"
             android:textSize="15sp" />

         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_gravity="center"
             android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:gravity="center"
                android:text=" N"
                android:textColor="#5C000000"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:gravity="center"
                android:text=" 1175 "
                android:textColor="#EB000000"
                android:textSize="15sp" />
         </LinearLayout>
      </LinearLayout>
      <FrameLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:background="@drawable/card_view" />
   </androidx.cardview.widget.CardView>
</LinearLayout>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginTop="30dp"
    android:orientation="vertical">

   <androidx.cardview.widget.CardView
       android:layout_width="370dp"
       android:layout_height="65dp"
       android:layout_gravity="center"
       app:cardCornerRadius="12dp"
       app:cardElevation="0dp">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical">

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="90dp"
             android:layout_marginTop="9dp"
             android:text="Enter Quantity of MTN  "
             android:textColor="#5C000000"
             android:textSize="15sp" />

         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_gravity="center"
             android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=" 10 "
                android:textColor="#EB000000"
                android:textSize="24sp" />
         </LinearLayout>
      </LinearLayout>
   </androidx.cardview.widget.CardView>
</LinearLayout>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginTop="47dp"
    android:orientation="vertical">

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginLeft="13dp"
       android:text="Total  "
       android:textColor="#5C000000"
       android:textSize="15sp" />

   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_gravity="center"
       android:orientation="horizontal">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="1dp"
          android:gravity="center"
          android:text=" N"
          android:textColor="#5C000000"
          android:textSize="12sp" />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="0dp"
          android:layout_marginTop="1dp"
          android:gravity="center"
          android:text=" 1180.00 "
          android:textColor="#7142C3"
          android:textSize="15sp" />
   </LinearLayout>

</LinearLayout>

<androidx.cardview.widget.CardView
    android:layout_width="370dp"
    android:layout_height="152dp"
    android:layout_gravity="center"
    android:layout_marginTop="50dp"
    app:cardCornerRadius="18dp"
    app:cardElevation="0dp">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="152dp"
       android:orientation="vertical"

      >

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:layout_marginTop="15dp"
          android:orientation="horizontal">

         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ask Price "
                android:layout_marginLeft="9dp"
                android:textColor="#5C000000"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="N174.09 "
                android:layout_marginLeft="8dp"
                android:textColor="#EB000000"
                android:textSize="18sp" />
         </LinearLayout>

         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="41.9dp"
             android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25.5dp"
                android:text="Bid Price "
                android:textColor="#5C000000"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="N174.09 "

                android:textColor="#EB000000"
                android:textSize="18sp" />
         </LinearLayout>

         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="52dp"
             android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="2dp"
                android:text="Service Fee"
                android:textColor="#5C000000"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:paddingLeft="26dp"
                android:text="N200 "
                android:textColor="#EB000000"
                android:textSize="18sp" />


         </LinearLayout>

      </LinearLayout>

      <View
          android:layout_width="320dp"
          android:layout_height="0.6dp"
          android:layout_marginLeft="10dp"
          android:layout_gravity="center"
          android:layout_marginRight="7dp"
          android:layout_marginTop="15dp"
          android:background="#4BB1A5A5" />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="31dp"
          android:layout_marginTop="6.5dp"
          android:text="Payment Source "
          android:textColor="#5C000000"
          android:textSize="15sp" />

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_marginLeft="30dp"
          android:layout_height="wrap_content"
          android:orientation="horizontal">

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:background="@drawable/wallet" />

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:paddingLeft="7dp"
             android:text="Naira Wallet "
             android:textColor="#EB000000"
             android:textSize="18sp" />

         <Button
             android:layout_width="67dp"
             android:layout_height="21dp"
             android:layout_gravity="end"
             android:background="@drawable/change"
             android:text="Change"
             android:layout_marginLeft="119.5dp"
             android:textAllCaps="false"
             android:textColor="#836231"
             android:textSize="12dp" />
      </LinearLayout>
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical">
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="match_parent"
             android:layout_marginLeft="61.5dp"
             android:text="N29,134 "
             android:textColor="#7142C3"
             android:textSize="15sp" />
      </LinearLayout>
   </LinearLayout>
</androidx.cardview.widget.CardView>

   <Button
       android:layout_width="370dp"
       android:layout_height="62dp"
       android:layout_gravity="center"
       android:layout_marginTop="60dp"
       android:background="@drawable/bound_naira"
       android:text="N1180.00                                                  Pay Now"
       android:textAllCaps="false"
       android:textColor="#EBFFFFFF"
       android:textSize="15sp" />




</LinearLayout>